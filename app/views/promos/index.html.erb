<%= form_tag promos_path, :method => 'get', :id => "promos_search" do %>
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title">
        <span class="glyphicon glyphicon-th-list"></span> Lista Promociones</h3>
    </div>
    <div class="panel-body">
      <div class="input-group">
        <span class="input-group-addon" style="margin-right: -4px;">
          <span class="glyphicon glyphicon-search"></span>
        </span>
        <%= text_field_tag :search, params[:search], :class => 'form-control',
          :style => "width: 100%;", :placeholder => 'Filtrar tiendas' %>
      </div>
    </div>
    <div id="promos"> <%= render :partial => 'promos_table' %></div>
    <div class="panel-footer">
      <%= link_to 'Nueva Promocion', new_promo_path,
        :class => 'btn btn-primary' %>
    </div>
  </div>
<% end %>